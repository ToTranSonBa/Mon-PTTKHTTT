<Window x:Class="GUI.View.RoomDivision_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:GUI.View"
        mc:Ignorable="d"
        Title="RoomDivision_Window" Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
         ><!--MouseMove="Window_MouseMove"-->
    <Window.Clip>
        <RectangleGeometry Rect="0,0,950,500" RadiusX="10" RadiusY="10">
        </RectangleGeometry>
    </Window.Clip>
    <Border BorderThickness="1" BorderBrush="#FF807D7D" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="0.7*"></RowDefinition>
            </Grid.RowDefinitions>
            <!--title-->
            <Grid Grid.Row="0" Margin="0,5,0,5">
                <TextBlock Text="PHIẾU ĐẶT PHÒNG" FontSize="28" Foreground="#00A3FF" FontWeight="Bold" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <!--Danh sách-->
            <!--Danh sách phòng trống-->
            <Grid Grid.Row="1" Margin="0,0,0,49" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>
                <!--Tìm kiếm và chọn lọc-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--Chọn loại phòng-->
                    <ComboBox HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}" Background="White" BorderThickness="0.5"
                        materialDesign:HintAssist.Hint="Loại phòng"
                        Height="30" Padding="5" Width="200" Margin="30 0 0 0">
                    </ComboBox>
                    <!--Tìm phòng-->
                    <materialDesign:ColorZone Grid.Column="1" Mode="Standard" Padding="8 0 8 0"
                        CornerRadius="5" Width="300" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"
                        materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Style="{DynamicResource MaterialDesignToolButton}">
                                <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                            </Button>
                            <TextBox Grid.Column="1" x:Name="txbTimKiem"
                                Margin="8 0 0 0"
                                materialDesign:HintAssist.Hint="Tìm phòng"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                BorderThickness="0"
                                MinWidth="200" 
                                TextChanged="txbTimKiem_TextChanged"   
                                VerticalAlignment="Center" />
                        </Grid>
                    </materialDesign:ColorZone>
                </Grid>
                <!--Danh sách phòng trống-->
                <Grid Grid.Row="1" Background="White" VerticalAlignment="Top">
                    <Grid.Clip>
                        <RectangleGeometry Rect="0,0 ,800,400" RadiusX="10" RadiusY="10"/>
                    </Grid.Clip>
                    <DataGrid x:Name="lvDanhSachPhong" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="10 0 0 0 "
                             Height="147" VerticalAlignment="Top">
                        <!--<ListView.Resources>
                                <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">10</sys:Double>
                            </ListView.Resources>-->
                        <DataGrid.Columns>
                            <DataGridTextColumn IsReadOnly="True" Header="Loại phòng" Width="200" Binding="{Binding KindNavigation.Name}"/>
                            <DataGridTextColumn IsReadOnly="True" Header="phòng" Width="200" Binding="{Binding RoomNumber}"/>
                            <DataGridTextColumn IsReadOnly="True" Header="Giá phòng" Width="200" Binding="{Binding KindNavigation.Price}"/>
                            <DataGridTemplateColumn Header="Thêm" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="ThemPhongBtn" Width="25" Height="25" BorderThickness="0" Padding="0" Click="click_Them"  >
                                            <materialDesign:PackIcon Kind="Add" />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <!--Danh sách đã chọn-->
                <Grid Grid.Row="2" Background="White" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="5*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="10,0,0,10">
                        <TextBlock Text="DANH SÁCH PHÒNG ĐÃ CHỌN" FontSize="10" Foreground="Black" FontWeight="Bold"
                           HorizontalAlignment="Left" VerticalAlignment="Center" />
                    </Grid>
                    <Grid Grid.Row="1" Background="White" VerticalAlignment="Top">
                        <Grid.Clip>
                            <RectangleGeometry Rect="0,0 ,800,400" RadiusX="10" RadiusY="10"/>
                        </Grid.Clip>
                        <DataGrid x:Name="lvDanhSachPhongDaChon" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="10,0,10,-21">
                            <!--<ListView.Resources>
                                <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">10</sys:Double>
                            </ListView.Resources>-->
                            <DataGrid.Columns>
                                <DataGridTextColumn IsReadOnly="True" Header="Loại phòng" Width="200" Binding="{Binding KindNavigation.Name}"/>
                                <DataGridTextColumn IsReadOnly="True" Header="phòng" Width="200" Binding="{Binding RoomNumber}"/>
                                <DataGridTextColumn IsReadOnly="True" Header="Giá phòng" Width="200" Binding="{Binding KindNavigation.Price}"/>
                                <DataGridTemplateColumn Header="Xóa" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Name="BochonBtn" Width="25" Height="25" BorderThickness="0" Padding="0" Click="click_BtnXoa"  >
                                                <materialDesign:PackIcon Kind="DeleteCircle" />
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                        </DataGrid>
                    </Grid>
                </Grid>
            </Grid>
            <!--danh sách các nút bấm-->
            <Grid Grid.Row="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 5">
                    <!--<Button Width="130" Height="37" Background="ForestGreen" Content="Phân phòng"
                        HorizontalAlignment="Center" RenderTransformOrigin="-1.146,0.435" Margin="0 0 30 0" Click="Click_BtnPhanphong">
                        <Button.Clip>
                            <RectangleGeometry Rect="0,0,130,37" RadiusX="10" RadiusY="10"/>
                        </Button.Clip>
                    </Button>-->
                    <Button Name="ThoatBtn" Width="130" Height="37" Background="IndianRed" Content="Thoát" Click="click_BtnExit"
                        HorizontalAlignment="Center" Margin="0 0 30 0">
                        <Button.Clip>
                            <RectangleGeometry Rect="0,0,130,37" RadiusX="10" RadiusY="10"/>
                        </Button.Clip>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
